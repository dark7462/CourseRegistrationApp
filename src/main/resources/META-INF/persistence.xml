<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.0">
    <persistence-unit name="pu">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.dark.entity.Course</class>
        <class>com.dark.entity.Student</class>
        <class>com.dark.entity.Teacher</class>
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/thub_app"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="password"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/> <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>